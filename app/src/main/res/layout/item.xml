<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/tvSurahNomor"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="30sp"
        style="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:layout_toEndOf="@+id/tvSurahNomor"
        android:textColor="@color/black"
        android:id="@+id/tvSurahLatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingEnd="70dp"
        android:paddingStart="35dp"
        android:text="@string/nama_surah"
        style="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvSurahArab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textDirection="anyRtl"
        android:layout_alignParentEnd="true"
        android:text="@string/arab"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_toEndOf="@+id/tvSurahNomor"
        android:textColor="@color/black"
        android:id="@+id/tvTerjemahanSurah"
        android:layout_below="@id/tvSurahArab"
        android:text="@string/arti_surah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="70dp"
        android:paddingStart="35dp"/>


</RelativeLayout>